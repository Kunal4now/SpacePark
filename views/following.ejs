<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/nav.css">
    <link rel="stylesheet" href="/stylesheets/explore.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/6747d42fe5.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %> 
    <div class="main">
        <div class="containers">
            <% if (userList.length > 0) { %>
                <% userList.forEach(usr => { %>
                    <div class="list">
                        <div class="user">
                            <img src="data:image/png;base64,<%= usr.profilePicture.data.toString('base64') %>" class="img-fluid avatar"> 
                            <a href="#"><%= usr.username  %> </a>
                        </div>
                        <form action="/home-dashboard/explore/<%= usr.id %>/unfollow?_method=DELETE" method="POST">
                            <button type="submit" class="follow-btn">Unfollow</button>
                        </form>
                    </div>
                    <hr/>
                <% }) %>
            <% } %>  
        </div>
    </div>
</body>
</html>